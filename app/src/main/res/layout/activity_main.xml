<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#1F1D65">
            <!--//////Title//////-->
            <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                android:layout_margin="10dp"


                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/smart_sports"/>
             </LinearLayout>
            <!--//////Title End///////-->

            <!--///// Catagory Layout //////-->
               <!--Main holder-->
            <LinearLayout
                android:clipToPadding="false"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="10dp"
                 android:orientation="vertical"
                >

                    <!--Cricket-->
                <LinearLayout
                    android:id="@+id/cricket"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"
                    android:elevation="20dp"
                    android:translationZ="50dp"
                    android:orientation="horizontal"
                    android:outlineAmbientShadowColor="@android:color/background_light">
                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:src="@drawable/cricket"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Cricket"
                        android:textColor="#ffffff"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                <!--Football-->
                <LinearLayout
                    android:id="@+id/football"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"

                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:src="@drawable/football"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Football"
                        android:textColor="#ffffff"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                <!--Basketball-->
                <LinearLayout
                    android:id="@+id/basketball"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"

                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:src="@drawable/basketball"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Basketball"
                        android:textColor="#ffffff"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                <!--Cricket-->
                <LinearLayout
                    android:id="@+id/volleyball"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"

                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:src="@drawable/volleyball"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Volleyball"
                        android:textColor="#ffffff"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>






             </LinearLayout>

        </LinearLayout>
</android.support.constraint.ConstraintLayout>